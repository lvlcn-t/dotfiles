[init]
    defaultBranch = main

[user]
	name = lvlcn-t
	email = 75443136+lvlcn-t@users.noreply.github.com

[includeIf "hasconfig:remote.*.url:git@github.com*/**"]
    path = .gitconfig-personal

[includeIf "hasconfig:remote.*.url:git@gitlab.devops.telekom.de*/**"]
    path = .gitconfig-work

[includeIf "hasconfig:remote.*.url:https://github.com/**"]
    path = .gitconfig-personal

[includeIf "hasconfig:remote.*.url:https://gitlab.devops.telekom.de/**"]
    path = .gitconfig-work

[user]
    signingkey = ~/.ssh/id_rsa.pub

[gpg]
	format = ssh

[commit]
	gpgsign = true

[format]
        signoff = true

[diff]
	tool = difft

[difftool]
    prompt = false

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[difftool "difft"]
	cmd = difft --display=side-by-side \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true

[alias]
	diffd = difftool --dir-diff

[merge]
    tool = nvimdiff

[mergetool]
    prompt = true

[mergetool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c 'wincmd w' -c 'wincmd J'"

[filter "lfs"]
       required = true
       clean = git-lfs clean -- %f
       smudge = git-lfs smudge -- %f
       process = git-lfs filter-process

[credential "https://gitlab.devops.telekom.de"]
	helper = !/home/linuxbrew/.linuxbrew/Cellar/glab/1.78.3/bin/glab auth git-credential
